mixin infoCardItem(item)
    .col
      a.info-card(href= item.href)
        .info-card__img(style=`background-image: url(${item.image})`)
        .info-card__content
          .info-card__text
            .info-card__title= item.title
            .info-card__description= item.description
          if(menuHref === '/news')
            .info-card__btns
              .info-card__date 12.09.2022
              .info-card__btn Подробнее
          else 
              .info-card__btn Подробнее


